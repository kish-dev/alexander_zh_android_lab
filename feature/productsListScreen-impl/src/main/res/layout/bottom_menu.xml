<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cartButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_A400"
        android:orientation="horizontal"
        android:padding="8dp"
        android:theme="@style/ThemeOverlay.AlexAndroidLab.FullscreenContainer"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/light_blue_900"
            app:icon="@drawable/ic_home"
            app:iconSize="28dp" />

        <com.example.commonui.customView.CartButtonView
            android:id="@+id/cartButtonView"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="240dp"
            app:iconPadding="4dp"
            app:iconSize="28dp"
            app:iconSrc="@drawable/ic_cart" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>